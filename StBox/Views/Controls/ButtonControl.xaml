<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:StBox.Views.Controls"
             x:Class="StBox.Views.Controls.ButtonControl">

    <controls:ContentViewExtended x:Name="_mainContentSpot_ExtendedContentView">
        <Grid>
            <!--  Background backing  -->
            <BoxView x:Name="_backing_BoxView" Opacity="0" />

            <ContentView x:Name="_content_ContentView">
                <Label x:Name="_buttonText_Label" />
            </ContentView>
        </Grid>
    </controls:ContentViewExtended>
</ContentView>